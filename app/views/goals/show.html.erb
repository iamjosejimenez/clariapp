<div class="max-w-3xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold mb-6 block"><%= @goal.dig("attributes", "name") %></h1>

  <div class="bg-white shadow rounded p-6 space-y-4">
    <p class="text-lg">
      <strong>Total:</strong>
      <span><%= clp(@goal.dig("attributes", "nav")) %></span>
    </p>

    <p>
      <strong>Monto depositado:</strong>
      <%= clp(@goal.dig("attributes", "deposited")) %>
    </p>

    <p>
      <strong>Ganancia:</strong>
      <%= clp(@goal.dig("attributes", "profit")) %>
    </p>

    <p>
      <strong>Aportes no netos:</strong>
      <%= clp(@goal.dig("attributes", "not_net_deposited")) %>
    </p>

    <p>
      <strong>Retirado:</strong>
      <%= clp(@goal.dig("attributes", "withdrawn")) %>
    </p>

    <p>
      <strong>Fecha de creaci√≥n:</strong>
      <%= l(Date.parse(@goal.dig("attributes", "created_at"))) %>
    </p>
  </div>

  <div class="mt-8">
    <%= link_to "Volver al dashboard", dashboard_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
