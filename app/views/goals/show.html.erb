<div class="max-w-3xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold mb-6 block"><%= @goal.name %></h1>

  <div class="bg-white shadow rounded p-2 flex place-content-around">
    <p class="text-lg">
      <strong>Disponible:</strong>
      <span><%= clp(@snapshot.nav) %></span>
    </p>

    <p class="text-lg">
      <strong>Ganancia:</strong>
      <%= clp(@snapshot.profit) %>
    </p>
  </div>
  <div id="snapshots-table" class="mt-6">
    <%= render TableComponent.new(rows: @snapshots) do |table| %>
      <% table.with_column(name: "Fecha", classes: "text-left text-gray-700") do |snapshot| %>
        <%= snapshot.created_at.strftime("%d/%m/%Y") %>
      <% end %>

      <% table.with_column(name: "Total", classes: "text-left text-green-600") do |snapshot| %>
        $<%= number_with_delimiter(snapshot.nav.to_i, delimiter: ".") %>
      <% end %>

      <% table.with_column(name: "Ganancia", classes: "text-left") do |snapshot| %>
        <span class="<%= snapshot.profit.to_i < 0 ? "text-red-600" : "text-green-600" %>">
          $<%= number_with_delimiter(snapshot.profit.to_i, delimiter: ".") %>
        </span>
      <% end %>

      <% table.with_column(name: "Acciones", classes: "text-center w-8") do |snapshot| %>
        <div class="flex items-center justify-center">
          <button
            data-action="click->modal#open"
            data-url="<%= snapshot_detail_goal_path(@goal, snapshot_id: snapshot.id) %>"
            title="Ver detalles"
            class="text-gray-600 hover:text-gray-800"
            data-tippy-content="Ver detalles del snapshot">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="h-5 w-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            </svg>
          </button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
