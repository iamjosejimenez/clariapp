<div class="max-w-3xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold mb-6 block"><%= @goal.name %></h1>

  <div class="bg-white shadow rounded p-6 space-y-4">
    <p class="text-lg">
      <strong>Total:</strong>
      <span><%= clp(@snapshot.nav) %></span>
    </p>

    <p>
      <strong>Monto depositado:</strong>
      <%= clp(@snapshot.deposited) %>
    </p>

    <p>
      <strong>Ganancia:</strong>
      <%= clp(@snapshot.profit) %>
    </p>

    <p>
      <strong>Aportes no netos:</strong>
      <%= clp(@snapshot.not_net_deposited) %>
    </p>

    <p>
      <strong>Retirado:</strong>
      <%= clp(@snapshot.withdrawn) %>
    </p>

    <p>
      <strong>Fecha de creaci√≥n:</strong>
      <%= l(@goal.created_at) %>
    </p>
  </div>
  <div id="snapshots-table">
    <%= render(GoalSnapshotsTableComponent.new(snapshots: @snapshots, pagy: @pagy)) %>
  </div>
  <div class="mt-8">
    <%= link_to "Volver al dashboard", dashboard_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
