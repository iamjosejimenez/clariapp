<div class="max-w-md mx-auto mt-10">
  <h1 class="text-2xl font-semibold mb-6">Iniciar sesión en Fintual</h1>
  <%= form_with url: fintual_sessions_create_path, method: :post, local: true do %>
    <div class="mb-4">
      <%= label_tag :email, "Correo electrónico de Fintual" %>
      <%= text_field_tag :email, nil, class: "w-full p-2 border rounded", autocomplete: "email" %>
    </div>

    <div class="mb-6">
      <%= label_tag :password, "Contraseña de Fintual" %>
      <%= password_field_tag :password, nil, class: "w-full p-2 border rounded", autocomplete: "password" %>
    </div>

    <%= submit_tag "Ingresar", class: "bg-violet-700 text-white px-4 py-2 rounded hover:bg-violet-800 cursor-pointer" %>
  <% end %>
</div>
