<div class="max-w-5xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold mb-6 block">Tus Metas</h1>

  <% if @goals.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @goals.each do |goal| %>
        <%= render GoalComponent.new(
          id: goal["id"],
          name: goal.dig("attributes", "name"),
          nav: goal.dig("attributes", "nav")
        ) %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No hay metas para mostrar.</p>
  <% end %>
</div>
