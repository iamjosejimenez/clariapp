<div class="max-w-5xl mx-auto mt-10 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold block">Total disponible</h1>
    <%= button_to update_goals_dashboard_path,
                  method: :post,
                  form: { data: { turbo: true } },
                  class: "p-2 rounded-full hover:bg-blue-100 text-blue-600 cursor-pointer",
                  title: "Actualizar objetivos" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none"
          viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round"
              d="M4.5 12a7.5 7.5 0 0113.053-5.303M19.5 12a7.5 7.5 0 01-13.053 5.303M19.5 4.5v5h-5" />
      </svg>
    <% end %>
  </div>
  <div class="text-xl font-semibold text-green-600">
    <%= number_to_currency(@total_available) %>
  </div>
  <h1 class="text-2xl font-bold mb-6 block mt-8">Tus Metas en Fintual</h1>
  <% if @goals.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @goals.each do |goal| %>
        <%= render GoalComponent.new(goal: goal) %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No hay metas para mostrar.</p>
  <% end %>
</div>
