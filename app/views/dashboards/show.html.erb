<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if @test_user.blank? %>
    <% if @fintual_user.present? %>
      <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
        <div class="flex justify-between items-center mb-4">
          <h1 class="text-2xl font-bold text-gray-800">Total disponible</h1>
        </div>
        <div class="text-3xl font-bold text-violet-700">
          <%= number_to_currency(@total_available) %>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-lg p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Tus Metas en Fintual</h1>
        <% if @goals.any? %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @goals.each do |goal| %>
              <%= render GoalComponent.new(goal: goal) %>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No hay metas para mostrar.</p>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-2xl shadow-lg p-8 text-center">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Conecta tu cuenta</h2>
        <p class="text-gray-600 mb-6">Vincula tu cuenta de Fintual para ver tus inversiones.</p>
        <%= link_to "Conectar con Fintual", fintual_sessions_new_path, class: "inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-violet-700 hover:bg-violet-800 shadow-sm transition-colors duration-200" %>
      </div>
    <% end %>
  <% end %>
  <% if @test_user.present? %>
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold text-gray-800">Total disponible</h1>
      </div>
      <div class="text-3xl font-bold text-violet-700">
        <%= number_to_currency(@test_total_available) %>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-lg p-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-6">Tus Metas</h1>
      <% if @test_goals.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @test_goals.each do |goal| %>
            <%= render GoalComponent.new(goal: goal) %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
