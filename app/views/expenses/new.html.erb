<div class="max-w-xl mx-auto p-6 bg-white rounded-2xl shadow space-y-6">
  <h1 class="text-2xl font-semibold text-gray-800">Agregar gasto a "<%= @budget.name %>"</h1>

  <%= simple_form_for([@budget, @budget_period, @expense], html: { class: "space-y-4" }) do |f| %>
    <div class="flex flex-col">
      <%= f.label :description, "DescripciÃ³n del gasto", class: "text-sm font-medium text-gray-700 mb-1" %>
      <%= f.input_field :description, class: "border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-300", placeholder: "Ej: Supermercado, cuenta, etc." %>
    </div>

    <div class="flex flex-col">
      <%= f.label :amount, "Monto (en CLP)", class: "text-sm font-medium text-gray-700 mb-1" %>
      <div class="relative">
        <%= f.input_field :amount,
              type: "text",
              step: "0.01",
              min: 0,
              class: "border border-gray-300 rounded-lg px-3 py-2 w-full focus:outline-none focus:ring focus:ring-blue-300",
              placeholder: "Ej: 7500",
              data: {
                controller: "currency",
              }
              %>
      </div>
    </div>

    <div>
      <%= f.button :submit, "Guardar gasto", class: "px-4 py-2 bg-blue-600 text-white rounded-xl hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
