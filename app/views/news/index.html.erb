<div class="max-w-4xl mx-auto mt-10 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Chilean Economic News</h1>
  </div>

  <% if @summary %>
    <section class="bg-white shadow rounded p-6 mb-8 border border-gray-100">
      <div class="flex items-center justify-between gap-4 mb-4">
        <h2 class="text-xl font-semibold">Summary - <%= @summary.generation_date.strftime("%d/%m/%Y") %></h2>
        <p class="text-sm text-gray-600 whitespace-nowrap">
          <%= @summary.sources_count %> sources consulted
        </p>
      </div>
      <div class="prose max-w-none prose-sm sm:prose">
        <%= simple_format(@summary.summary) %>
      </div>
    </section>

    <% if @news_items.any? %>
      <section>
        <h3 class="text-lg font-semibold mb-4">News Items</h3>
        <div class="space-y-4">
          <% @news_items.each do |item| %>
            <%= render NewsItemComponent.new(item: item) %>
          <% end %>
        </div>
      </section>
    <% end %>
  <% else %>
    <div class="bg-white shadow rounded p-6">
      <p>No news available. Click Refresh to generate today's summary.</p>
    </div>
  <% end %>
</div>
