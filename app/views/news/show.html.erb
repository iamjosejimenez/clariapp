<div class="max-w-3xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold mb-6 block"><%= @summary.title %></h1>

  <div class="bg-white shadow rounded p-6 mb-6">
    <div class="prose max-w-none">
      <%= simple_format(@summary.summary) %>
    </div>
    <p class="text-sm text-gray-600 mt-4">
      <%= @summary.sources_count %> sources consulted
    </p>
  </div>

  <% if @news_items.any? %>
    <h3 class="text-lg font-semibold mb-4">Articles</h3>
    <div class="space-y-4">
      <% @news_items.each do |item| %>
        <%= render NewsItemComponent.new(item: item) %>
      <% end %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "â† Back to News", news_index_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
