  <div class="border-b pb-2">
    <p class="text-sm text-gray-600">Date</p>
    <p class="text-lg font-semibold"><%= summary.generation_date.strftime("%d/%m/%Y") %></p>
  </div>

  <div class="border-b pb-2">
    <p class="text-sm text-gray-600">Summary</p>
    <div class="prose max-w-none"><%= simple_format(summary.summary) %></div>
