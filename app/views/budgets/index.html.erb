<div class="max-w-6xl mx-auto p-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Mis presupuestos</h1>

    <%= link_to new_budget_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-xl shadow hover:bg-blue-700" do %>
      <!-- Icono plus -->
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 -ml-1" fill="none"
          viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 4v16m8-8H4" />
      </svg>
      Nuevo presupuesto
    <% end %>
  </div>
  <table class="min-w-full bg-white border rounded-xl overflow-hidden shadow">
    <thead class="bg-gray-100 text-left text-gray-600 uppercase text-sm">
      <tr>
        <th class="px-4 py-3">Nombre</th>
        <th class="px-4 py-3">Frecuencia</th>
        <th class="px-4 py-3">Monto asignado</th>
        <th class="px-4 py-3">Gastado</th>
        <th class="px-4 py-3">Restante</th>
        <th class="px-4 py-3">Acciones</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @budgets.each do |budget| %>
        <% period = budget.current_period %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-3 font-medium text-gray-900"><%= budget.name %></td>
          <td class="px-4 py-3 text-gray-700"><%= budget.category.titleize %></td>
          <td class="px-4 py-3 text-gray-700">$<%= number_with_delimiter(period.total.to_i, delimiter: ".") %></td>
          <td class="px-4 py-3 text-gray-700 text-red-600">$<%= number_with_delimiter(period.total_spent.to_i, delimiter: ".") %></td>
          <td class="px-4 py-3 text-gray-700">$<%= number_with_delimiter(period.remaining.to_i, delimiter: ".") %></td>
          <td class="px-4 py-3 text-center flex space-x-4">
            <!-- Agregar gasto (icono: plus) -->
            <%= link_to new_budget_budget_period_expense_path(budget_id: budget.id, budget_period_id: period.id), title: "Agregar gasto", class: "text-blue-600 hover:text-blue-800" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                  viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 4v16m8-8H4" />
              </svg>
            <% end %>
            <!-- Ver gastos (icono: document-text) -->
            <%= link_to budget_budget_period_expenses_path(budget_id: budget.id, budget_period_id: period.id), title: "Ver gastos", class: "text-gray-600 hover:text-gray-800" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                  viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M8 16h8M8 12h8m-6 8h6m-2-18H6a2 2 0 00-2 2v16l4-4h10a2 2 0 002-2V6a2 2 0 00-2-2z" />
              </svg>
            <% end %>
            <!-- Ver historial -->
            <%= link_to budget_budget_periods_path(budget_id: budget.id), title: "Historial de periodos", class: "text-gray-500 hover:text-gray-800" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                  viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M3 3v3h3M3 21v-3h3m12 3v-3h3m-3-15v3h3M4 12h16" />
              </svg>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-6">
    <%= pagy_nav(@pagy).html_safe %>
  </div>
</div>
