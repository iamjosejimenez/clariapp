<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-2">Bienvenido</h2>
    <p class="text-sm text-gray-500 mb-6">Ingresa tus credenciales para continuar</p>
    <% if @error %>
      <div class="mb-4 flex items-center gap-2 rounded-lg border border-red-200 bg-red-50 px-3 py-2 text-sm text-red-600" id="alert">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M12 19a7 7 0 110-14 7 7 0 010 14z" />
        </svg>
        <span><%= @error %></span>
      </div>
    <% end %>
    <%= form_with url: session_url, class: "space-y-4" do |f| %>
      <div>
        <%= f.label "Correo electrónico", class: "block text-sm font-medium text-gray-700", for: :email_address %>
        <div class="relative mt-1">
          <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
            <path fill-rule="evenodd" d="M5.404 14.596A6.5 6.5 0 1 1 16.5 10a1.25 1.25 0 0 1-2.5 0 4 4 0 1 0-.571 2.06A2.75 2.75 0 0 0 18 10a8 8 0 1 0-2.343 5.657.75.75 0 0 0-1.06-1.06 6.5 6.5 0 0 1-9.193 0ZM10 7.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5Z" clip-rule="evenodd" />
          </svg>
          </span>
          <%= f.email_field :email_address,
                            required: true,
                            autocomplete: "email",
                            placeholder: "ejemplo@correo.com",
                            value: @email_address,
                            class: "w-full pl-10 pr-12 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-violet-700 focus:border-violet-700 placeholder:text-gray-400" %>
          </div>
      </div>
      <div>
        <%= f.label "Contraseña", class: "block text-sm font-medium text-gray-700", for: :password %>
        <div class="relative mt-1">
          <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
              <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 0 0-4.5 4.5V9H5a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-6a2 2 0 0 0-2-2h-.5V5.5A4.5 4.5 0 0 0 10 1Zm3 8V5.5a3 3 0 1 0-6 0V9h6Z" clip-rule="evenodd" />
            </svg>
          </span>
          <%= f.password_field :password,
                               required: true,
                               autocomplete: "password",
                               placeholder: "**********",
                               maxlength: 72,
                               class: "w-full pl-10 pr-12 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-violet-700 focus:border-violet-700 placeholder:text-gray-400" %>
          </div>
      </div>
      <%= f.submit "Acceder",
                   class: "w-full bg-violet-700 hover:bg-violet-700 text-white font-semibold py-2 px-4 rounded-lg shadow" %>
      <div class="flex justify-end">
        <a href="#" class="text-sm text-violet-700 hover:underline">¿Olvidaste tu contraseña?</a>
      </div>
      </div>
    <% end %>
  </div>
</div>
