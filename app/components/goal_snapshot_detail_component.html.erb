<div class="space-y-3">
  <div class="border-b pb-2">
    <p class="text-sm text-gray-600">Fecha</p>
    <p class="text-lg font-semibold text-gray-900"><%= @snapshot.created_at.strftime("%d/%m/%Y") %></p>
  </div>

  <div class="border-b pb-2">
    <p class="text-sm text-gray-600">Total (NAV)</p>
    <p class="text-lg font-semibold text-green-600">$<%= number_with_delimiter(@snapshot.nav.to_i, delimiter: ".") %></p>
  </div>

  <div class="border-b pb-2">
    <p class="text-sm text-gray-600">Ganancia</p>
    <p class="text-lg font-semibold <%= @snapshot.profit.to_i < 0 ? "text-red-600" : "text-green-600" %>">
      $<%= number_with_delimiter(@snapshot.profit.to_i, delimiter: ".") %>
    </p>
  </div>

  <div class="border-b pb-2">
    <p class="text-sm text-gray-600">Depositado</p>
    <p class="text-lg font-semibold text-gray-900">$<%= number_with_delimiter(@snapshot.deposited.to_i, delimiter: ".") %></p>
  </div>

  <div class="border-b pb-2">
    <p class="text-sm text-gray-600">Retirado</p>
    <p class="text-lg font-semibold text-gray-900">$<%= number_with_delimiter(@snapshot.withdrawn.to_i, delimiter: ".") %></p>
  </div>

  <div>
    <p class="text-sm text-gray-600">Neto no Depositado</p>
    <p class="text-lg font-semibold text-gray-900">$<%= number_with_delimiter(@snapshot.not_net_deposited.to_i, delimiter: ".") %></p>
  </div>
</div>
